.tqb-date-picker .tqb-dp-labels
    border-top 1px solid silver
    background-color gray-background
    padding-left 0
    margin 0
    display flex
    flex-direction row

    li
        color rgb(148, 148, 148)
        list-style-type none
        flex 1
        text-align center
        font-size 0.8em
        line-height labels-height

        &.tqb-dp-sunday,
        &.tqb-dp-saturday
            color red